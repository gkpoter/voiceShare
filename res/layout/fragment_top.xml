<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="#19b4ff"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <ViewFlipper android:layout_width="match_parent"
                 android:id="@+id/top_main_viewFlipper"
                 android:background="#fff"
                 android:layout_margin="2dp"
                 android:layout_height="215dp">
    </ViewFlipper>

    <LinearLayout android:layout_width="match_parent"
                  android:orientation="horizontal"
                  android:layout_marginLeft="5dp"
                  android:layout_marginRight="5dp"
                  android:layout_height="40dp">

        <TextView android:layout_width="match_parent"
                  android:layout_weight="1"
                  android:id="@+id/top_main_leftText"
                  android:alpha="1.0"
                  android:gravity="center"
                  android:textColor="#ffffff"
                  android:text="Year Top"
                  android:textSize="25dp"
                  android:layout_height="match_parent"/>

        <TextView android:layout_width="match_parent"
                  android:layout_weight="1"
                  android:id="@+id/top_main_RightText"
                  android:alpha="0.5"
                  android:gravity="center"
                  android:textColor="#ffffff"
                  android:text="Month Top"
                  android:textSize="25dp"
                  android:layout_height="match_parent"/>

    </LinearLayout>
    <TextView android:layout_width="match_parent"
              android:background="#d4d4d4"
              android:layout_height="1px"/>

    <android.support.v4.view.ViewPager
            android:id="@+id/top_main_viewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
    />

</LinearLayout>