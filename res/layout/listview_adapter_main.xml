<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <VideoView android:layout_width="match_parent"
               android:id="@+id/video_main"
               android:background="@android:color/transparent"
               android:layout_height="215dp"/>

    <RelativeLayout android:layout_width="match_parent"
                   android:background="#ffffff"
                  android:layout_height="45dp">

        <ImageView android:layout_width="40dp"
                   android:layout_marginLeft="10dp"
                   android:layout_marginTop="5dp"
                   android:layout_marginBottom="5dp"
                  android:background="@drawable/logo"
                   android:layout_height="match_parent" android:id="@+id/main_data_userImage"/>

        <TextView android:layout_width="wrap_content"
                  android:text="Gkpoter"
                  android:textColor="#727272"
                  android:gravity="center_vertical"
                  android:textSize="15dp"
                  android:layout_height="match_parent"
                  android:layout_toEndOf="@+id/main_data_userImage"/>

        <ImageView android:layout_width="50dp"
                   android:src="@drawable/news"
                   android:layout_height="match_parent"
                   android:layout_marginTop="5dp"
                   android:layout_marginBottom="5dp"
                   android:layout_marginRight="25dp"
                   android:layout_alignParentEnd="true"/>

    </RelativeLayout>

</LinearLayout>