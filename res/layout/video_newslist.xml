<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content">

        <ImageView android:layout_width="40dp"
                   android:layout_marginLeft="10dp"
                   android:layout_marginTop="5dp"
                   android:layout_marginBottom="5dp"
                   android:background="@drawable/logo"
                   android:layout_height="40dp" android:id="@+id/video_news_userImage"/>

        <TextView android:layout_width="wrap_content"
                  android:text="Gkpoter"
                  android:id="@+id/video_news_userName"
                  android:textColor="#727272"
                  android:gravity="center_vertical"
                  android:textSize="15dp"
                  android:layout_height="40dp"
                  android:layout_toEndOf="@+id/video_news_userImage"/>

        <TextView android:layout_width="match_parent"
                  android:text="        评论社区你好Gkpoter评论社区你好Gkpoter评论社区你好Gkpoter"
                  android:textSize="20dp"
                  android:gravity="center_vertical"
                  android:layout_below="@+id/video_news_userName"
                  android:textColor="#6f6f6f"
                  android:layout_height="wrap_content"
                  android:layout_marginBottom="5dp"
                  android:layout_marginLeft="25dp"
                  android:layout_marginRight="25dp"/>

    </RelativeLayout>

</LinearLayout>